	title="Kartik Business Solutions | Name It. We Do It. | One Partner. Every Solution."
	description="Kartik Business Solutions is a dynamic, multi-service business solutions provider offering civil construction, event management, manpower, housekeeping, demolition, and specialized on-ground solutions. 24Ã—7 availability. One Partner. Every Solution."
>
	<Header />
	<main>
		<Hero />
		<About />
		<ImageCards />
		<Gallery />
		<Values />
		<Stats />
		<FAQ />
		<Contact />
	</main>
	<Footer />
</Layout>

<script>
	// Smooth scroll for anchor links
	document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
		anchor.addEventListener("click", (e: Event) => {
			e.preventDefault();
			const element = e.currentTarget as HTMLAnchorElement;
			const href = element.getAttribute("href");
			if (href) {
				const target = document.querySelector(href);
				if (target) {
					target.scrollIntoView({
						behavior: "smooth",
						block: "start",
					});
				}
			}
		});
	});
</script>
