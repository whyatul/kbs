---
const projects = [
  {
    id: 1,
    title: "Civil & Construction",
    subtitle: "Building Tomorrow",
    category: "CONSTRUCTION",
    gradient: "from-orange-600/90 via-orange-700/85 to-amber-800/90",
    image: "/src/assets/img/civil.png",
    offerings: ["Civil construction", "Repair & renovation", "Structural modifications", "Site supervision"]
  },
  {
    id: 2,
    title: "Event Excellence",
    subtitle: "Memorable Moments",
    category: "EVENTS",
    gradient: "from-purple-600/90 via-indigo-700/85 to-blue-800/90",
    image: "/src/assets/img/event.png",
    offerings: ["Corporate events", "Product launches", "Private parties", "On-ground execution"]
  },
  {
    id: 3,
    title: "Interior Designs",
    subtitle: "Aesthetic Spaces",
    category: "INTERIORS",
    gradient: "from-emerald-600/90 via-teal-700/85 to-cyan-800/90",
    image: "/src/assets/img/interior.png",
    offerings: ["Residential interiors", "Commercial interiors", "Space planning", "Turnkey execution"]
  },
  {
    id: 4,
    title: "Manpower Solutions",
    subtitle: "Skilled Teams",
    category: "STAFFING",
    gradient: "from-rose-600/90 via-pink-700/85 to-fuchsia-800/90",
    image: "/src/assets/img/manpower.png",
    offerings: ["Skilled & unskilled labour", "Event staff", "Supervisors & helpers"]
  },
  {
    id: 5,
    title: "Housekeeping",
    subtitle: "Pristine Spaces",
    category: "CLEANING",
    gradient: "from-sky-600/90 via-blue-700/85 to-indigo-800/90",
    image: "/src/assets/img/housekeeping.png",
    offerings: ["Daily housekeeping", "Deep cleaning", "Post-construction cleaning"]
  },
  {
    id: 6,
    title: "Custom Solutions",
    subtitle: "Your Vision, Our Expertise",
    category: "ON-DEMAND",
    gradient: "from-amber-600/90 via-orange-700/85 to-red-800/90",
    image: "/src/assets/img/custom.png",
    centered: true,
    offerings: ["Specialized projects", "Custom requirements", "Unique solutions"]
  }
];
---

<section class="relative py-24 md:py-32 lg:py-40 bg-primary overflow-hidden" id="projects">
  <!-- Background Effects -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-[20%] left-[10%] w-[400px] h-[400px] bg-orange-500/10 rounded-full blur-[120px]" data-float data-float-amplitude="30"></div>
    <div class="absolute bottom-[20%] right-[10%] w-[350px] h-[350px] bg-purple-500/10 rounded-full blur-[100px]" data-float data-float-amplitude="25" data-float-duration="4000"></div>
  </div>

  <div class="max-w-[1400px] mx-auto px-5 md:px-10 lg:px-[60px] relative z-10">
    <!-- Section Header -->
    <div class="text-center max-w-[800px] mx-auto mb-16" data-animate="fade-up">
      <span class="inline-block px-5 py-2 bg-orange-500/10 border border-orange-500/20 rounded-full text-sm text-orange-500 uppercase tracking-widest mb-5">
        What We Offer
      </span>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-5">
                From Idea to Execution<span
                    class="inline-block px-3 sm:px-4 md:px-5 pt-2 sm:pt-3 md:pt-4 lg:pt-5 pb-1 text-gradient font-peace"
                    >Our Expertise</span
                >
            </h2>
      <p class="text-lg text-zinc-400 leading-relaxed">
        A single partner to manage the entire operation  from planning to final delivery. One call, total peace of mind.
      </p>
    </div>

    <!-- Image Cards Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" data-stagger="zoom-in" data-stagger-delay="100">
      {projects.map((project, index) => (
        <div 
          class="anime-card group relative h-[400px] md:h-[450px] bg-card rounded-3xl overflow-hidden cursor-pointer transition-all duration-500 hover:shadow-[0_20px_60px_rgba(0,0,0,0.4)]"
          data-stagger-item
          style={`perspective: 1000px;`}
        >
          <!-- Background Pattern -->
          <div class="anime-card-image absolute inset-0 bg-cover bg-center transition-transform duration-700">
            <div class={`absolute inset-0 bg-gradient-to-br ${project.gradient}`}></div>
            <!-- Grid Pattern -->
            <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:40px_40px]"></div>
            <!-- Animated orbs -->
            <div class="absolute top-1/4 left-1/4 w-32 h-32 rounded-full bg-white/5 blur-2xl" data-float data-float-amplitude="15"></div>
            <div class="absolute bottom-1/3 right-1/4 w-24 h-24 rounded-full bg-white/10 blur-xl" data-float data-float-amplitude="20" data-float-duration="4000"></div>
          </div>
          
          <!-- Image (if exists) -->
          {project.image && (
            <img 
              src={project.image} 
              alt={project.title}
              class={`absolute left-1/2 -translate-x-1/2 h-[70%] w-auto object-contain z-[5] transition-transform duration-500 group-hover:scale-105 ${project.centered ? 'top-1/2 -translate-y-1/2' : 'bottom-0 object-bottom'}`}
            />
          )}
          
          <!-- Overlay -->
          <div class="anime-card-overlay absolute inset-0 bg-black/30 opacity-30 transition-opacity duration-500"></div>
          
          <!-- Title & Subtitle at Top -->
          <div class="absolute top-6 left-6 z-10">
            <h3 class="text-2xl md:text-3xl font-bold text-white drop-shadow-[0_2px_4px_rgba(0,0,0,0.8)]">
              {project.title}
            </h3>
            <p class="text-white/70 text-lg mt-1 drop-shadow-[0_1px_2px_rgba(0,0,0,0.6)]">
              {project.subtitle}
            </p>
          </div>
          
          <!-- Border animation on hover -->
          <div class="absolute inset-0 rounded-3xl border-2 border-transparent group-hover:border-white/20 transition-colors duration-500"></div>
          
          <!-- Corner accents -->
          <div class="absolute top-0 left-0 w-16 h-16 border-t-2 border-l-2 border-white/0 group-hover:border-white/30 rounded-tl-3xl transition-all duration-500 transform origin-top-left group-hover:scale-110"></div>
          <div class="absolute bottom-0 right-0 w-16 h-16 border-b-2 border-r-2 border-white/0 group-hover:border-white/30 rounded-br-3xl transition-all duration-500 transform origin-bottom-right group-hover:scale-110"></div>
          
          <!-- Offerings (visible on hover) -->
          {project.offerings && (
            <div class="absolute bottom-6 left-6 right-6 z-10 opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500">
              <div class="flex flex-wrap gap-2">
                {project.offerings.map((offering) => (
                  <span class="px-3 py-1.5 text-xs bg-zinc-900 rounded-full text-white border border-white/20">
                    {offering}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>