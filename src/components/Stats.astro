---
const stats = [
  {
    value: "24/7",
    label: "Service Availability",
  },
  {
    value: "100%",
    label: "Client Satisfaction",
  },
  {
    value: "8+",
    label: "Service Categories",
  },
  {
    value: "âˆž",
    label: "Commitment",
  }
];
---

<section class="relative py-16 md:py-24 lg:py-32 xl:py-40 bg-primary overflow-hidden" id="stats">
  <!-- Background Effects -->
  <div class="absolute inset-0 pointer-events-none">
    <!-- Gradient orbs -->
    <div class="absolute top-[-20%] left-1/2 -translate-x-1/2 w-[500px] h-[500px] bg-gradient-to-br from-orange-500/30 to-orange-600/10 rounded-full blur-[80px] opacity-40" data-float data-float-amplitude="50" data-float-duration="5000"></div>
    <div class="absolute bottom-[10%] right-[5%] w-[300px] h-[300px] bg-orange-400/20 rounded-full blur-[80px]" data-float data-float-amplitude="35" data-float-duration="6000"></div>
    <!-- Grid lines -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:80px_80px] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_50%,black,transparent)]"></div>
  </div>
  
  <div class="max-w-[1400px] mx-auto px-5 md:px-10 lg:px-[60px] relative z-10">
    <!-- Section Header -->
    <div class="text-center max-w-[700px] mx-auto mb-12 md:mb-16 lg:mb-20" data-animate="fade-up">
      <span class="inline-block px-5 py-2 bg-orange-500/10 border border-orange-500/20 rounded-full text-sm text-orange-500 uppercase tracking-widest mb-5">
        Track Record
      </span>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-5">
                Number that<span
                    class="inline-block px-2 sm:px-3 md:px-4 pt-2 sm:pt-3 md:pt-4 lg:pt-5 pb-1 text-gradient font-peace"
                    >Speaks</span
                >
            </h2>
      <p class="text-lg text-zinc-400 leading-relaxed">
        While we're a growing company, our commitment to excellence is unwavering. Here's what defines our approach.
      </p>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 md:gap-8" data-stagger="bounce-in" data-stagger-delay="120">
      {stats.map((stat, index) => (
        <div 
          class="group text-center p-6 sm:p-8 md:p-10 bg-[rgba(26,26,36,0.5)] border border-white/[0.08] rounded-2xl md:rounded-[32px] backdrop-blur-[10px] transition-all duration-500 hover:border-orange-500 hover:-translate-y-2 hover:scale-[1.02] hover:bg-[rgba(26,26,36,0.8)]"
          data-stagger-item
          data-magnetic="0.12"
        >
          <div class="relative inline-block mb-3 md:mb-4">
            <span class="block text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black text-gradient leading-none">
              {stat.value}
            </span>
            <!-- Glow effect -->
            <div class="absolute -inset-x-10 -inset-y-5 bg-[radial-gradient(ellipse_at_center,rgba(249,115,22,0.3),transparent_70%)] opacity-0 transition-opacity group-hover:opacity-100 -z-10"></div>
          </div>
          <h3 class="text-base sm:text-lg md:text-xl font-semibold text-white">{stat.label}</h3>
        </div>
      ))}
    </div>
  </div>
</section>
