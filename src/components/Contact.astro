---
const contactInfo = {
    phone: "9217270700",
    email: "infokartikbusinesssolutions@gmail.com",
    whatsapp: "9217270700",
    tagline: "Give us a chance—and the very next time, you'll choose us again.",
};

const services = [
    "Civil & Construction Work",
    "Interior Designing",
    "Event Management",
    "Barricading Solutions",
    "Manpower Supply",
    "Housekeeping & Cleaning",
    "Demolition Services",
    "Custom Requirements",
];
---

<section
    class="relative py-20 md:py-28 lg:py-32 bg-primary overflow-hidden"
    id="contact"
>
    <!-- Background Effects -->
    <div class="absolute inset-0 pointer-events-none">
        <div
            class="absolute -top-[200px] -right-[200px] w-[600px] h-[600px] bg-[radial-gradient(circle,rgba(249,115,22,0.15),transparent_70%)]"
        >
        </div>
        <div
            class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.015)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.015)_1px,transparent_1px)] bg-[size:60px_60px] opacity-50"
        >
        </div>
    </div>

    <div
        class="max-w-[1400px] mx-auto px-5 md:px-10 lg:px-[60px] relative z-10"
    >
        <div class="grid lg:grid-cols-2 gap-16 items-start">
            <!-- Left: Info Section -->
            <div>
                <span
                    class="inline-block px-5 py-2 bg-orange-500/10 border border-orange-500/20 rounded-full text-sm text-orange-500 uppercase tracking-widest mb-6"
                >
                    Get In Touch
                </span>
                <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-5">
                Ready To<span
                    class="inline-block px-2 sm:px-3 md:px-4 pt-2 sm:pt-3 md:pt-4 lg:pt-5 pb-1 text-gradient font-peace"
                    >Work Together?</span
                >
            </h2>
                <p class="text-lg text-zinc-400 leading-relaxed mb-10">
                    Tell us about your project requirements and we'll get back
                    to you with a tailored solution. Available 24×7 for your
                    convenience.
                </p>

                <!-- Contact Methods -->
                <div class="flex flex-col gap-4 mb-10">
                    <a
                        href={`tel:${contactInfo.phone}`}
                        class="flex items-center gap-4 p-5 bg-card border border-white/[0.08] rounded-xl transition-all hover:border-orange-500 hover:translate-x-2"
                    >
                        <div
                            class="w-12 h-12 flex items-center justify-center bg-orange-500/10 rounded-lg text-orange-500 shrink-0"
                        >
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path
                                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <span
                                class="block text-sm text-zinc-500 uppercase tracking-wider mb-0.5"
                                >Phone</span
                            >
                            <span class="text-white font-semibold"
                                >{contactInfo.phone}</span
                            >
                        </div>
                    </a>

                    <a
                        href={`mailto:${contactInfo.email}`}
                        class="flex items-center gap-4 p-5 bg-card border border-white/[0.08] rounded-xl transition-all hover:border-orange-500 hover:translate-x-2"
                    >
                        <div
                            class="w-12 h-12 flex items-center justify-center bg-orange-500/10 rounded-lg text-orange-500 shrink-0"
                        >
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path
                                    d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                                ></path>
                                <path d="M22 6l-10 7L2 6"></path>
                            </svg>
                        </div>
                        <div>
                            <span
                                class="block text-sm text-zinc-500 uppercase tracking-wider mb-0.5"
                                >Email</span
                            >
                            <span
                                class="text-white font-semibold text-sm sm:text-base break-all"
                                >{contactInfo.email}</span
                            >
                        </div>
                    </a>

                    <a
                        href={`https://wa.me/91${contactInfo.whatsapp}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center gap-4 p-5 bg-card border border-white/[0.08] rounded-xl transition-all hover:border-[#25d366] hover:translate-x-2"
                    >
                        <div
                            class="w-12 h-12 flex items-center justify-center bg-[#25d366]/10 rounded-lg text-[#25d366] shrink-0"
                        >
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <path
                                    d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <span
                                class="block text-sm text-zinc-500 uppercase tracking-wider mb-0.5"
                                >WhatsApp</span
                            >
                            <span class="text-white font-semibold"
                                >Available 24×7</span
                            >
                        </div>
                    </a>
                </div>

                <!-- Tagline -->
                <div
                    class="p-6 bg-orange-500/5 border-l-[3px] border-orange-500 rounded-r-xl"
                >
                    <p class="text-white italic text-lg">
                        "{contactInfo.tagline}"
                    </p>
                </div>
            </div>

            <!-- Right: Form Section -->
            <div
                class="bg-card border border-white/[0.08] rounded-[32px] p-8 md:p-10"
            >
                <form class="flex flex-col gap-6" id="contact-form">
                    <div class="flex flex-col gap-2">
                        <label
                            for="name"
                            class="text-[0.9rem] font-medium text-white"
                            >Full Name</label
                        >
                        <input
                            type="text"
                            id="name"
                            name="name"
                            placeholder="Your name"
                            required
                            class="w-full px-4 py-3.5 font-secondary text-white bg-tertiary border border-white/[0.08] rounded-xl transition-all focus:border-orange-500 focus:ring-[3px] focus:ring-orange-500/10 outline-none placeholder:text-zinc-500"
                        />
                    </div>

                    <div class="grid sm:grid-cols-2 gap-5">
                        <div class="flex flex-col gap-2">
                            <label
                                for="email"
                                class="text-[0.9rem] font-medium text-white"
                                >Email</label
                            >
                            <input
                                type="email"
                                id="email"
                                name="email"
                                placeholder="your@email.com"
                                required
                                class="w-full px-4 py-3.5 font-secondary text-white bg-tertiary border border-white/[0.08] rounded-xl transition-all focus:border-orange-500 focus:ring-[3px] focus:ring-orange-500/10 outline-none placeholder:text-zinc-500"
                            />
                        </div>
                        <div class="flex flex-col gap-2">
                            <label
                                for="phone"
                                class="text-[0.9rem] font-medium text-white"
                                >Phone</label
                            >
                            <input
                                type="tel"
                                id="phone"
                                name="phone"
                                placeholder="Your phone number"
                                class="w-full px-4 py-3.5 font-secondary text-white bg-tertiary border border-white/[0.08] rounded-xl transition-all focus:border-orange-500 focus:ring-[3px] focus:ring-orange-500/10 outline-none placeholder:text-zinc-500"
                            />
                        </div>
                    </div>

                    <div class="flex flex-col gap-2">
                        <label
                            for="service"
                            class="text-[0.9rem] font-medium text-white"
                            >Service Required</label
                        >
                        <select
                            id="service"
                            name="service"
                            required
                            class="w-full px-4 py-3.5 font-secondary text-white bg-tertiary border border-white/[0.08] rounded-xl transition-all focus:border-orange-500 focus:ring-[3px] focus:ring-orange-500/10 outline-none cursor-pointer appearance-none bg-[url('data:image/svg+xml,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%2212%22%20height%3D%2212%22%20fill%3D%22%23a1a1aa%22%20viewBox%3D%220%200%2016%2016%22%3E%3Cpath%20d%3D%22M7.247%2011.14L2.451%205.658C1.885%205.013%202.345%204%203.204%204h9.592a1%201%200%200%201%20.753%201.659l-4.796%205.48a1%201%200%200%201-1.506%200z%22%2F%3E%3C%2Fsvg%3E')] bg-no-repeat bg-[right_1.25rem_center]"
                        >
                            <option value="" class="bg-[#1a1a24]"
                                >Select a service</option
                            >
                            {
                                services.map((service) => (
                                    <option
                                        value={service}
                                        class="bg-[#1a1a24]"
                                    >
                                        {service}
                                    </option>
                                ))
                            }
                        </select>
                    </div>

                    <div class="flex flex-col gap-2">
                        <label
                            for="message"
                            class="text-[0.9rem] font-medium text-white"
                            >Project Details</label
                        >
                        <textarea
                            id="message"
                            name="message"
                            rows="4"
                            placeholder="Tell us about your project requirements..."
                            required
                            class="w-full px-4 py-3.5 font-secondary text-white bg-tertiary border border-white/[0.08] rounded-xl transition-all focus:border-orange-500 focus:ring-[3px] focus:ring-orange-500/10 outline-none placeholder:text-zinc-500 resize-y min-h-[120px]"
                        ></textarea>
                    </div>

                    <button
                        type="submit"
                        class="w-full inline-flex items-center justify-center gap-2.5 px-8 py-[18px] bg-gradient-to-r from-orange-500 via-orange-600 to-orange-700 text-white font-primary font-semibold rounded-xl glow-orange hover:translate-y-[-2px] hover:shadow-[0_0_60px_rgba(249,115,22,0.3)] transition-all mt-2"
                    >
                        <span>Send Message</span>
                        <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"
                            ></path>
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    const form = document.getElementById("contact-form") as HTMLFormElement;

    form?.addEventListener("submit", (e) => {
        e.preventDefault();

        // Get form data
        const formData = new FormData(form);
        const name = formData.get("name");
        const email = formData.get("email");
        const phone = formData.get("phone");
        const service = formData.get("service");
        const message = formData.get("message");

        // Create mailto link
        const subject = `Project Inquiry: ${service}`;
        const body = `Name: ${name}\nEmail: ${email}\nPhone: ${phone}\nService: ${service}\n\nMessage:\n${message}`;

        // Open email client
        window.location.href = `mailto:infokartikbusinesssolutions@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;

        alert(
            "Thank you! Your message is ready to send. Please complete sending via your email client.",
        );
    });
</script>
