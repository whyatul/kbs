<section class="relative py-20 md:py-28 lg:py-32 bg-primary overflow-hidden" id="services">

  <div class="max-w-[1400px] mx-auto px-5 md:px-10 lg:px-[60px] relative z-10">
    <!-- Section Header -->
    <div class="text-center max-w-[800px] mx-auto mb-16" data-animate="fade-up">
      <span class="inline-block px-5 py-2 bg-orange-500/10 border border-orange-500/20 rounded-full text-sm text-orange-500 uppercase tracking-widest mb-5">
        What We Offer
      </span>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-5">
        From Idea to Execution <br/> <span class="font-peace text-gradient mt-2">Our Expertise</span>
      </h2>
      <p class="text-lg text-zinc-400 leading-relaxed">
        A single partner to manage the entire operation  from planning to final delivery. One call, total peace of mind.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-16" data-stagger="zoom-in" data-stagger-delay="80">
      {services.map((service, index) => (
        <div 
          class={`group relative rounded-2xl overflow-hidden transition-all duration-700 ${service.hoverColor} hover:-translate-y-3 hover:shadow-2xl cursor-pointer`}
          data-stagger-item
          data-magnetic="0.1"
        >
          <!-- Background Image -->
          <div 
            class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110"
            style={`background-image: url('${service.bgImage}');`}
          ></div>
          
          <!-- Gradient Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-black via-black/80 to-black/40 group-hover:from-black group-hover:via-black/85 group-hover:to-black/50 transition-all duration-500"></div>
          
          <!-- Glass border effect -->
          <div class="absolute inset-0 border border-white/10 rounded-2xl group-hover:border-white/20 transition-colors"></div>
          
          <!-- Content -->
          <div class="relative z-10 p-6 h-full flex flex-col min-h-[420px]">
            <!-- Header -->
            <div class="flex items-start justify-between mb-4">
              <!-- Icon with glow -->
              <div 
                class="w-14 h-14 flex items-center justify-center bg-white/10 backdrop-blur-md rounded-xl text-orange-400 transition-all duration-500 group-hover:bg-orange-500 group-hover:text-white group-hover:shadow-[0_0_30px_rgba(249,115,22,0.5)] group-hover:scale-110"
                set:html={icons[service.icon]}
              />
              <!-- Number -->
              <span class="text-5xl font-black text-white/5 group-hover:text-white/10 transition-colors">
                {String(service.id).padStart(2, '0')}
              </span>
            </div>
            
            <!-- Title -->
            <h3 class="text-xl font-bold text-white mb-3 group-hover:text-orange-400 transition-colors duration-300">
              {service.title}
            </h3>
            
            <!-- Description -->
            <p class="text-sm text-white/60 leading-relaxed mb-auto line-clamp-3 group-hover:text-white/80 transition-colors">
              {service.description}
            </p>
            
            <!-- Offerings -->
            <div class="mt-4 pt-4 border-t border-white/10">
              <div class="flex flex-wrap gap-2">
                {service.offerings.slice(0, 3).map((offering) => (
                  <span class="px-3 py-1 text-xs bg-white/5 backdrop-blur-sm rounded-full text-white/70 border border-white/10 group-hover:bg-orange-500/20 group-hover:border-orange-500/30 group-hover:text-orange-300 transition-all">
                    {offering}
                  </span>
                ))}
              </div>
            </div>
            
            <!-- Arrow indicator -->
            <div class="absolute bottom-6 right-6 w-10 h-10 flex items-center justify-center bg-white/5 backdrop-blur-sm rounded-full opacity-0 translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500">
