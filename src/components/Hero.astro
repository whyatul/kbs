---

<section
    class="min-h-screen flex flex-col items-center justify-center relative overflow-hidden px-4 sm:px-6 md:px-8 pt-20 sm:pt-24 md:pt-0"
    id="hero"
>
    <!-- Background -->
    <div id="hero-background" class="absolute inset-0 z-0">
        <!-- Gradient orbs - responsive sizes -->
        <div class="absolute top-1/4 left-1/4 w-[300px] sm:w-[400px] md:w-[500px] lg:w-[600px] h-[300px] sm:h-[400px] md:h-[500px] lg:h-[600px] bg-orange-500/10 rounded-full blur-[100px] sm:blur-[120px] md:blur-[150px] animate-pulse-slow"></div>
        <div class="absolute bottom-1/4 right-1/4 w-[250px] sm:w-[350px] md:w-[400px] lg:w-[500px] h-[250px] sm:h-[350px] md:h-[400px] lg:h-[500px] bg-purple-500/8 rounded-full blur-[80px] sm:blur-[100px] md:blur-[120px] animate-pulse-slow" style="animation-delay: 2s;"></div>
        
        <!-- Subtle grid -->
        <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.015)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.015)_1px,transparent_1px)] bg-[size:40px_40px] sm:bg-[size:60px_60px] md:bg-[size:80px_80px] [mask-image:radial-gradient(ellipse_60%_60%_at_50%_50%,black,transparent)]"></div>
        
        <!-- Noise texture -->
        <div class="absolute inset-0 opacity-[0.015] bg-[url('data:image/svg+xml;base64,')]"></div>
    </div>

    <!-- Floating Images - Hidden on mobile, visible on tablet+ -->
    <div class="absolute inset-0 z-[1] pointer-events-none hidden lg:block">
        {heroImages.map((image, index) => (
            <div 
                class={`hero-image absolute ${image.position} ${image.size} rounded-2xl overflow-hidden shadow-2xl opacity-0 animate-float-in`}
                style={`animation-delay: ${image.delay}; transform: rotate(${image.rotation});`}
                data-parallax
                data-speed={(index % 3) + 1}
            >
                <img 
                    src={image.src} 
                    alt={image.alt}
                    class="w-full h-full object-cover transition-transform duration-700 hover:scale-110"
                    loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"></div>
                <div class="absolute inset-0 border border-white/10 rounded-2xl"></div>
            </div>
        ))}
    </div>

    <!-- Main Content -->
    <div class="relative z-10 text-center px-2 sm:px-4 md:px-6 lg:px-8 max-w-6xl mx-auto w-full">
        <!-- Top Label -->
        <div class="mb-4 sm:mb-6 md:mb-8 lg:mb-10 animate-fadeInUp opacity-0" style="animation-delay: 0.2s;">
            <span class="inline-flex items-center gap-1.5 sm:gap-2 px-3 sm:px-4 py-1.5 sm:py-2 bg-white/5 border border-white/10 rounded-full text-[10px] sm:text-xs md:text-sm text-zinc-400 backdrop-blur-sm">
                <span class="w-1.5 h-1.5 sm:w-2 sm:h-2 bg-orange-500 rounded-full animate-pulse"></span>
                Trusted by 50+ businesses
            </span>
        </div>

        <!-- Main Heading -->
        <h1 class="mb-4 sm:mb-6 md:mb-8 animate-fadeInUp opacity-0" style="animation-delay: 0.4s;">
            <span class="block text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl 2xl:text-8xl font-black tracking-tight leading-[0.95] text-white">
                ONE PARTNER
            </span>
            <span class="block text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl 2xl:text-8xl font-black tracking-tight leading-[0.95] mt-2 sm:mt-4 md:mt-6 lg:mt-8">
                <span class="font-peace text-gradient">Every Solution</span>
            </span>
        </h1>
        
        <!-- Service Tags -->
        <div class="flex flex-wrap justify-center gap-1.5 sm:gap-2 md:gap-3 mb-6 sm:mb-8 md:mb-10 lg:mb-12 animate-fadeInUp opacity-0 max-w-xl md:max-w-2xl lg:max-w-3xl mx-auto" style="animation-delay: 0.8s;">
            {services.map((service, index) => (
                <span 
                    class="service-tag px-2.5 sm:px-3 md:px-4 py-1 sm:py-1.5 md:py-2 bg-zinc-900/80 border border-zinc-800 rounded-full text-[10px] sm:text-xs md:text-sm text-zinc-300 cursor-default transition-all duration-300 hover:bg-orange-500/20 hover:border-orange-500/50 hover:text-orange-400"
                    style={`animation-delay: ${0.8 + index * 0.1}s;`}
                >
                    {service}
                </span>
            ))}
        </div>
    </div>
</section>

<style>
    @keyframes float-in {
        0% {
            opacity: 0;
            transform: translateY(40px) rotate(var(--rotation, 0deg)) scale(0.8);
        }
        100% {
            opacity: 1;
            transform: translateY(0) rotate(var(--rotation, 0deg)) scale(1);
        }
    }
    
    .animate-float-in {
        animation: float-in 0.8s ease-out forwards;
    }
    
    @keyframes pulse-slow {
        0%, 100% { opacity: 0.5; transform: scale(1); }
        50% { opacity: 0.8; transform: scale(1.1); }
    }
    
    .animate-pulse-slow {
        animation: pulse-slow 8s ease-in-out infinite;
    }
    
    @keyframes scroll-mouse {
        0% { transform: translateY(0); opacity: 1; }
        50% { transform: translateY(8px); opacity: 0.5; }
        100% { transform: translateY(0); opacity: 1; }
    }
    
    .animate-scroll-mouse {
        animation: scroll-mouse 1.5s ease-in-out infinite;
    }
    
    .hero-image {
        transition: transform 0.5s cubic-bezier(0.22, 1, 0.36, 1), box-shadow 0.5s ease;
        pointer-events: auto;
    }
    
    .hero-image:hover {
        z-index: 50 !important;
        transform: rotate(0deg) scale(1.08) !important;
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5), 0 0 40px rgba(249, 115, 22, 0.2);
    }
    
    .service-tag {
        backdrop-filter: blur(8px);
    }
</style>

<script>
    // Parallax effect for floating images
    const parallaxImages = document.querySelectorAll('[data-parallax]');
    
    if (parallaxImages.length > 0) {
        let ticking = false;
        
        const updateParallax = () => {
            const scrollY = window.scrollY;
            const windowHeight = window.innerHeight;
            
            parallaxImages.forEach((image) => {
                const imgEl = image as HTMLElement;
                const speed = parseFloat(imgEl.dataset.speed || '1');
                const rect = imgEl.getBoundingClientRect();
                
                // Only animate if in viewport
                if (rect.top < windowHeight && rect.bottom > 0) {
                    const yOffset = scrollY * speed * 0.1;
                    const currentRotation = imgEl.style.transform.match(/rotate\(([^)]+)\)/)?.[1] || '0deg';
                    imgEl.style.transform = `translateY(${yOffset}px) rotate(${currentRotation})`;
                }
            });
            
            ticking = false;
        };
        
        window.addEventListener('scroll', () => {
            if (!ticking) {
                requestAnimationFrame(updateParallax);
                ticking = true;
            }
        }, { passive: true });
    }
    
    // Mouse move effect for images
    const heroSection = document.getElementById('hero');
    const floatingImages = document.querySelectorAll('.hero-image');
    
    if (heroSection && floatingImages.length > 0) {
        heroSection.addEventListener('mousemove', (e) => {
            const { clientX, clientY } = e;
            const centerX = window.innerWidth / 2;
            const centerY = window.innerHeight / 2;
            
            const moveX = (clientX - centerX) / centerX;
            const moveY = (clientY - centerY) / centerY;
            
            floatingImages.forEach((image, index) => {
                const imgEl = image as HTMLElement;
                const speed = ((index % 3) + 1) * 8;
                const x = moveX * speed;
                const y = moveY * speed;
                const currentRotation = imgEl.style.transform.match(/rotate\(([^)]+)\)/)?.[1] || '0deg';
                
                if (!imgEl.matches(':hover')) {
                    imgEl.style.transform = `translate(${x}px, ${y}px) rotate(${currentRotation})`;
                }
            });
        });
        
        heroSection.addEventListener('mouseleave', () => {
            floatingImages.forEach((image) => {
                const imgEl = image as HTMLElement;
                const currentRotation = imgEl.style.transform.match(/rotate\(([^)]+)\)/)?.[1] || '0deg';
                imgEl.style.transform = `rotate(${currentRotation})`;
            });
        });
    }
</script>
