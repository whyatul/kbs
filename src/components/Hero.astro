---

<section
    class="min-h-screen flex flex-col items-center justify-center relative overflow-hidden px-4 sm:px-6 md:px-8 pt-24 sm:pt-28 md:pt-32 lg:pt-24"
    id="hero"
>
    <!-- Background -->
    <div id="hero-background" class="absolute inset-0 z-0">
        <!-- Gradient orbs - responsive sizes -->
        <div class="absolute top-1/4 left-1/4 w-[300px] sm:w-[400px] md:w-[500px] lg:w-[600px] h-[300px] sm:h-[400px] md:h-[500px] lg:h-[600px] bg-orange-500/10 rounded-full blur-[100px] sm:blur-[120px] md:blur-[150px] animate-pulse-slow"></div>
        <div class="absolute bottom-1/4 right-1/4 w-[250px] sm:w-[350px] md:w-[400px] lg:w-[500px] h-[250px] sm:h-[350px] md:h-[400px] lg:h-[500px] bg-purple-500/8 rounded-full blur-[80px] sm:blur-[100px] md:blur-[120px] animate-pulse-slow" style="animation-delay: 2s;"></div>
        
        <!-- Subtle grid -->
        <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.015)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.015)_1px,transparent_1px)] bg-[size:40px_40px] sm:bg-[size:60px_60px] md:bg-[size:80px_80px] [mask-image:radial-gradient(ellipse_60%_60%_at_50%_50%,black,transparent)]"></div>
        
        <!-- Noise texture -->
        <div class="absolute inset-0 opacity-[0.015] bg-[url('data:image/svg+xml;base64,')]"></div>
    </div>

    <!-- Floating Images Gallery -->
    <div class="absolute inset-0 z-[1] mt-16 md:mt-20">
        {heroImages.map((image, index) => (
            <div 
                class={`hero-card absolute ${image.position} ${image.size}`}
                style={`--delay: ${image.delay}; --rotation: ${image.rotation};`}
                data-index={index}
            >
                <div class="hero-card-inner w-full h-full rounded-2xl lg:rounded-3xl overflow-hidden shadow-2xl">
                    <img 
                        src={image.src} 
                        alt={image.alt}
                        class="hero-card-image w-full h-full object-cover brightness-110"
                        loading="eager"
                    />
                    <div class="hero-card-shine absolute inset-0 opacity-0"></div>
                    <div class="absolute inset-0 rounded-2xl lg:rounded-3xl ring-2 ring-white/30 ring-inset"></div>
                </div>
            </div>
        ))}
    </div>

    <!-- Main Content -->
    <div class="relative z-10 text-center px-2 sm:px-4 md:px-6 lg:px-8 max-w-6xl mx-auto w-full">
        <!-- Top Label -->
        <div class="mb-4 sm:mb-6 md:mb-8 lg:mb-10 animate-fadeInUp opacity-0" style="animation-delay: 0.2s;">
            <span class="inline-flex items-center gap-1.5 sm:gap-2 px-3 sm:px-4 py-1.5 sm:py-2 bg-white/5 border border-white/10 rounded-full text-[10px] sm:text-xs md:text-sm text-zinc-400 backdrop-blur-sm">
                <span class="w-1.5 h-1.5 sm:w-2 sm:h-2 bg-orange-500 rounded-full animate-pulse"></span>
                Trusted by 50+ businesses
            </span>
        </div>

        <!-- Main Heading -->
        <h1 class="mb-4 sm:mb-6 md:mb-8 animate-fadeInUp opacity-0" style="animation-delay: 0.4s;">
            <span class="block text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl 2xl:text-8xl font-black tracking-tight leading-[0.95] text-white">
                ONE PARTNER
            </span>
            <span class="block text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl 2xl:text-8xl font-black tracking-tight leading-[0.95] mt-2 sm:mt-4 md:mt-6 lg:mt-8">
                <span class="font-peace text-gradient">Every Solution</span>
            </span>
        </h1>
        
        <!-- Service Tags -->
        <div class="flex flex-wrap justify-center gap-1.5 sm:gap-2 md:gap-3 mb-6 sm:mb-8 md:mb-10 lg:mb-12 animate-fadeInUp opacity-0 max-w-xl md:max-w-2xl lg:max-w-3xl mx-auto" style="animation-delay: 0.8s;">
            {services.map((service, index) => (
                <span 
                    class="service-tag px-2.5 sm:px-3 md:px-4 py-1 sm:py-1.5 md:py-2 bg-zinc-900/80 border border-zinc-800 rounded-full text-[10px] sm:text-xs md:text-sm text-zinc-300 cursor-default transition-all duration-300 hover:bg-orange-500/20 hover:border-orange-500/50 hover:text-orange-400"
                    style={`animation-delay: ${0.8 + index * 0.1}s;`}
                >
                    {service}
                </span>
            ))}
        </div>
    </div>
</section>

<style>
    /* ===== ENTRANCE ANIMATION ===== */
    @keyframes card-entrance {
        0% {
            opacity: 0;
            transform: rotate(var(--rotation)) translateY(60px) scale(0.85);
            filter: blur(10px);
        }
        100% {
            opacity: 1;
            transform: rotate(var(--rotation)) translateY(0) scale(1);
            filter: blur(0);
        }
    }
    
    .hero-card {
        animation: card-entrance 1.2s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        animation-delay: var(--delay);
        opacity: 0;
        transform-origin: center center;
        cursor: pointer;
    }
    
    .hero-card-inner {
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
        box-shadow: 
            0 10px 30px rgba(0, 0, 0, 0.3),
            0 0 0 1px rgba(255, 255, 255, 0.1);
    }
    
    .hero-card-image {
        transition: transform 0.7s cubic-bezier(0.23, 1, 0.32, 1),
                    filter 0.5s ease;
        filter: brightness(1.1) saturate(1.1) contrast(1.05);
    }
    
    .hero-card-shine {
        background: linear-gradient(
            135deg,
            transparent 0%,
            rgba(255, 255, 255, 0.1) 50%,
            transparent 100%
        );
        transition: opacity 0.5s ease;
    }
    
    /* ===== HOVER EFFECTS ===== */
    .hero-card:hover {
        z-index: 100 !important;
    }
    
    .hero-card:hover .hero-card-inner {
        transform: rotate(0deg) scale(1.12);
        box-shadow: 
            0 30px 60px rgba(0, 0, 0, 0.5),
            0 0 0 2px rgba(249, 115, 22, 0.5),
            0 0 80px rgba(249, 115, 22, 0.15);
    }
    
    .hero-card:hover .hero-card-image {
        transform: scale(1.08);
        filter: brightness(1.25) saturate(1.15) contrast(1.1);
    }
    
    .hero-card:hover .hero-card-shine {
        opacity: 1;
    }
    
    /* ===== FLOATING ANIMATION ===== */
    @keyframes gentle-float {
        0%, 100% { transform: rotate(var(--rotation)) translateY(0); }
        50% { transform: rotate(var(--rotation)) translateY(-8px); }
    }
    
    .hero-card.animated {
        animation: gentle-float 6s ease-in-out infinite;
    }
    
    .hero-card:nth-child(odd).animated {
        animation-delay: 0s;
    }
    
    .hero-card:nth-child(even).animated {
        animation-delay: 3s;
    }
    
    /* ===== BACKGROUND PULSE ===== */
    @keyframes pulse-slow {
        0%, 100% { opacity: 0.6; transform: scale(1); }
        50% { opacity: 0.9; transform: scale(1.03); }
    }
    
    .animate-pulse-slow {
        animation: pulse-slow 8s ease-in-out infinite;
    }
    
    /* ===== SERVICE TAGS ===== */
    .service-tag {
        backdrop-filter: blur(12px);
    }
    
    /* ===== RESPONSIVE VISIBILITY ===== */
    @media (max-width: 640px) {
        .hero-card:nth-child(n+5) {
            display: none;
        }
        .hero-card-inner {
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.5);
        }
        .hero-card {
            opacity: 1;
        }
        .hero-card-image {
            filter: brightness(1.15) saturate(1.15) contrast(1.08);
        }
    }
    
    @media (max-width: 768px) {
        .hero-card {
            opacity: 1;
        }
        .hero-card.animated {
            animation: none;
            opacity: 1;
        }
    }
    
    @media (min-width: 769px) and (max-width: 1024px) {
        .hero-card {
            opacity: 0.95;
        }
    }
</style>

<script>
    // Wait for entrance animations to complete, then add floating
    const heroCards = document.querySelectorAll('.hero-card');
    
    setTimeout(() => {
        heroCards.forEach((card) => {
            card.classList.add('animated');
        });
    }, 2000);
    
    // Mouse parallax effect (desktop only)
    if (window.innerWidth >= 1024) {
        const heroSection = document.getElementById('hero');
        
        if (heroSection) {
            let mouseX = 0;
            let mouseY = 0;
            let currentX = 0;
            let currentY = 0;
            
            heroSection.addEventListener('mousemove', (e) => {
                const rect = heroSection.getBoundingClientRect();
                mouseX = (e.clientX - rect.left - rect.width / 2) / rect.width;
                mouseY = (e.clientY - rect.top - rect.height / 2) / rect.height;
            });
            
            heroSection.addEventListener('mouseleave', () => {
                mouseX = 0;
                mouseY = 0;
            });
            
            function animate() {
                // Smooth interpolation
                currentX += (mouseX - currentX) * 0.08;
                currentY += (mouseY - currentY) * 0.08;
                
                heroCards.forEach((card, index) => {
                    const cardEl = card as HTMLElement;
                    const depth = ((index % 3) + 1) * 12;
                    const moveX = currentX * depth;
                    const moveY = currentY * depth;
                    const rotation = cardEl.style.getPropertyValue('--rotation') || '0deg';
                    
                    if (!cardEl.matches(':hover')) {
                        cardEl.style.transform = `rotate(${rotation}) translate(${moveX}px, ${moveY}px)`;
                    }
                });
                
                requestAnimationFrame(animate);
            }
            
            animate();
        }
    }
    
    // Scroll parallax
    let ticking = false;
    
    window.addEventListener('scroll', () => {
        if (!ticking && window.innerWidth >= 768) {
            requestAnimationFrame(() => {
                const scrollY = window.scrollY;
                
                heroCards.forEach((card, index) => {
                    const cardEl = card as HTMLElement;
                    const speed = ((index % 3) + 1) * 0.05;
                    const yOffset = scrollY * speed;
                    const rotation = cardEl.style.getPropertyValue('--rotation') || '0deg';
                    
                    cardEl.style.transform = `rotate(${rotation}) translateY(${yOffset}px)`;
                });
                
                ticking = false;
            });
            ticking = true;
        }
    }, { passive: true });
</script>
