---
const heroImages = [
    { 
        src: "https://images.unsplash.com/photo-1504307651254-35680f356dfd?w=800&q=90",
        alt: "Construction site",
        position: "top-[10%] left-[3%] md:left-[5%] lg:left-[6%]",
        size: "w-36 h-48 sm:w-44 sm:h-56 md:w-56 md:h-72 lg:w-72 lg:h-[22rem] xl:w-80 xl:h-[26rem]",
        delay: "0.2s",
        rotation: "-4deg"
    },
    { 
        src: "https://images.unsplash.com/photo-1519741497674-611481863552?w=800&q=90",
        alt: "Event celebration",
        position: "top-[5%] right-[3%] md:right-[5%] lg:right-[7%]",
        size: "w-40 h-32 sm:w-52 sm:h-40 md:w-64 md:h-52 lg:w-80 lg:h-64 xl:w-96 xl:h-72",
        delay: "0.3s",
        rotation: "3deg"
    },
    { 
        src: "https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?w=800&q=90",
        alt: "Modern interior",
        position: "top-[42%] left-[2%] md:left-[3%] lg:left-[4%]",
        size: "w-32 h-44 sm:w-40 sm:h-52 md:w-52 md:h-68 lg:w-64 lg:h-80 xl:w-72 xl:h-96",
        delay: "0.4s",
        rotation: "2deg"
    },
    { 
        src: "https://images.unsplash.com/photo-1581092160562-40aa08e78837?w=800&q=90",
        alt: "Workers team",
        position: "top-[38%] right-[2%] md:right-[3%] lg:right-[4%]",
        size: "w-36 h-48 sm:w-44 sm:h-60 md:w-56 md:h-76 lg:w-68 lg:h-[22rem] xl:w-76 xl:h-[26rem]",
        delay: "0.35s",
        rotation: "-3deg"
    },
    { 
        src: "https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=800&q=90",
        alt: "Cleaning service",
        position: "bottom-[8%] left-[4%] md:left-[6%] lg:left-[7%]",
        size: "w-32 h-40 sm:w-40 sm:h-48 md:w-52 md:h-64 lg:w-64 lg:h-80 xl:w-72 xl:h-88",
        delay: "0.5s",
        rotation: "4deg"
    },
    { 
        src: "https://images.unsplash.com/photo-1513623935135-c896b59073c1?w=800&q=90",
        alt: "Trade show",
        position: "bottom-[6%] right-[3%] md:right-[5%] lg:right-[6%]",
        size: "w-40 h-32 sm:w-52 sm:h-40 md:w-64 md:h-52 lg:w-80 lg:h-64 xl:w-96 xl:h-72",
        delay: "0.55s",
        rotation: "-2deg"
    },
];

