---
const values = [
  {
    icon: "clock",
    title: "Punctuality",
    description: "We respect time and deliver projects as committed. Timelines are not suggestions—they're promises."
  },
  {
    icon: "book",
    title: "Discipline",
    description: "Structured processes and professional conduct on every site. Excellence through systematic execution."
  },
  {
    icon: "heart",
    title: "Dedication",
    description: "Complete involvement from planning to execution. Every project receives our full commitment."
  },
  {
    icon: "shuffle",
    title: "Flexibility",
    description: "Quick adaptation to client requirements and site conditions. We adjust, evolve, and deliver."
  },
  {
    icon: "24h",
    title: "24×7 Availability",
    description: "Support whenever our clients need us. Round-the-clock service that never sleeps."
  },
  {
    icon: "group",
    title: "Team Coordination",
    description: "Strong internal communication for smooth execution. Seamless collaboration at every level."
  },
  {
    icon: "lightbulb",
    title: "Problem-Solving",
    description: "Quick resolution of on-ground challenges. Obstacles become opportunities for innovation."
  },
  {
    icon: "star",
    title: "Customer Satisfaction",
    description: "Our success is measured by repeat clients. Your trust is our greatest achievement."
  }
];

const icons: Record<string, string> = {
  clock: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>`,
  book: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/></svg>`,
  heart: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>`,
  shuffle: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M16 3h5v5M4 20L21 3M21 16v5h-5M15 15l6 6M4 4l5 5"/></svg>`,
  "24h": `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/><path d="M9 17h6"/></svg>`,
  group: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"/></svg>`,
  lightbulb: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9 18h6M10 22h4M12 2a7 7 0 0 0-4 12.7V17a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-2.3A7 7 0 0 0 12 2z"/></svg>`,
  star: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>`
};
---

<section class="relative py-20 md:py-28 lg:py-32 bg-secondary overflow-hidden" id="values">
  <!-- Top border gradient -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-orange-500 to-transparent opacity-30"></div>
  
  <!-- Background circles -->
  <div class="absolute -top-[200px] -right-[200px] w-[600px] h-[600px] rounded-full bg-orange-500 opacity-5 pointer-events-none" data-float data-float-amplitude="40" data-float-duration="5000"></div>
  <div class="absolute -bottom-[100px] -left-[100px] w-[400px] h-[400px] rounded-full bg-orange-400 opacity-5 pointer-events-none" data-float data-float-amplitude="30" data-float-duration="6000"></div>

  <div class="max-w-[1400px] mx-auto px-5 md:px-10 lg:px-[60px] relative z-10">
    <!-- Section Header -->
    <div class="text-center max-w-[700px] mx-auto mb-16" data-animate="fade-up">
      <span class="inline-block px-5 py-2 bg-orange-500/10 border border-orange-500/20 rounded-full text-sm text-orange-500 uppercase tracking-widest mb-5">
        Our Foundation
      </span>
    <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-5">
                Our Core Values that<span
                    class="inline-block px-2 sm:px-3 md:px-4 pt-2 sm:pt-3 md:pt-4 lg:pt-5 pb-1 text-gradient font-peace"
                    >Defines Us</span
                >
            </h2>
      <p class="text-lg text-zinc-400 leading-relaxed">
        These aren't just words on a wall they're the principles we live by every day, on every project, with every client.
      </p>
    </div>

    <!-- Values Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6" data-stagger="rotate-stagger" data-stagger-delay="80">
      {values.map((value, index) => (
        <div 
          class="group relative bg-[rgba(26,26,36,0.6)] backdrop-blur-[10px] border border-white/[0.08] rounded-3xl p-8 text-center transition-all duration-500 hover:border-orange-500 hover:bg-[rgba(26,26,36,0.9)] hover:-translate-y-1.5 overflow-hidden"
          data-stagger-item
          data-magnetic="0.1"
        >
          <!-- Icon wrapper -->
          <div class="relative inline-flex mb-5">
            <div 
              class="w-16 h-16 flex items-center justify-center bg-orange-500/10 border border-orange-500/20 rounded-full text-orange-500 transition-all group-hover:bg-gradient-to-br group-hover:from-orange-500 group-hover:via-orange-600 group-hover:to-orange-700 group-hover:border-transparent group-hover:text-white group-hover:scale-110"
              set:html={icons[value.icon]}
            />
            <!-- Glow effect -->
            <div class="absolute -inset-2.5 bg-[radial-gradient(circle,rgba(249,115,22,0.3),transparent_70%)] rounded-full opacity-0 transition-opacity group-hover:opacity-100"></div>
          </div>
          
          <!-- Title -->
          <h3 class="text-xl font-bold mb-3 transition-colors group-hover:text-orange-500">
            {value.title}
          </h3>
          
          <!-- Description -->
          <p class="text-[0.9rem] text-zinc-400 leading-relaxed">
            {value.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
