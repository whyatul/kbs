---
import logoImage from "../assets/logo/gold_log_KBS.png";

interface Props {
    id?: string;
}

const { id = "header" } = Astro.props;
---

<header
    class="fixed top-0 left-0 right-0 z-[1000] py-5 transition-all duration-500 bg-transparent"
    id={id}
>
    <div
        class="max-w-[1400px] mx-auto px-5 md:px-10 lg:px-[60px] flex items-center justify-between gap-10"
    >
        <!-- Logo -->
        <a
            href="/"
            class="flex items-center hover:opacity-80 transition-opacity flex-shrink-0"
        >
               <img 
                src={logoImage.src} 
                alt="Kartik Business Solutions" 
                class="h-10 sm:h-12 md:h-14 w-auto"
            />
            <span
                class="hidden sm:flex font-primary text-xl md:text-2xl lg:text-3xl font-bold text-white flex-col leading-tight ml-3"
            >
                Kartik Business Solutions
            </span>
            <span
                class="sm:hidden font-primary text-lg font-bold text-white ml-2"
            >
                KBS
            </span>
        </a>

        <!-- Desktop Navigation -->
        <nav class="hidden lg:flex items-center">
            <ul class="flex items-center gap-1">
                <li>
                    <a
                        href="#about"
                        class="nav-link group relative px-4 py-2.5 text-sm font-medium text-zinc-400 hover:text-white transition-all duration-300"
                    >
                        <span class="relative z-10">About</span>
                        <span class="absolute inset-0 bg-white/5 rounded-lg scale-0 group-hover:scale-100 transition-transform duration-300"></span>
                        <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-8 h-0.5 bg-orange-500 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                    </a>
                </li>
                <li>
                    <a
                        href="#services"
                        class="nav-link group relative px-4 py-2.5 text-sm font-medium text-zinc-400 hover:text-white transition-all duration-300"
                    >
                        <span class="relative z-10">Services</span>
                        <span class="absolute inset-0 bg-white/5 rounded-lg scale-0 group-hover:scale-100 transition-transform duration-300"></span>
                        <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-8 h-0.5 bg-orange-500 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                    </a>
                </li>
                <li>
                    <a
                        href="#gallery"
                        class="nav-link group relative px-4 py-2.5 text-sm font-medium text-zinc-400 hover:text-white transition-all duration-300"
                    >
                        <span class="relative z-10">Gallery</span>
                        <span class="absolute inset-0 bg-white/5 rounded-lg scale-0 group-hover:scale-100 transition-transform duration-300"></span>
                        <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-8 h-0.5 bg-orange-500 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                    </a>
                </li>

                <li>
                    <a
                        href="#faq"
                        class="nav-link group relative px-4 py-2.5 text-sm font-medium text-zinc-400 hover:text-white transition-all duration-300"
                    >
                        <span class="relative z-10">FAQ</span>
                        <span class="absolute inset-0 bg-white/5 rounded-lg scale-0 group-hover:scale-100 transition-transform duration-300"></span>
                        <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-8 h-0.5 bg-orange-500 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                    </a>
                </li>
                <li>
                    <a
                        href="#contact"
                        class="nav-link group relative px-4 py-2.5 text-sm font-medium text-zinc-400 hover:text-white transition-all duration-300"
                    >
                        <span class="relative z-10">Contact</span>
                        <span class="absolute inset-0 bg-white/5 rounded-lg scale-0 group-hover:scale-100 transition-transform duration-300"></span>
                        <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-8 h-0.5 bg-orange-500 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Mobile Menu Button -->
        <button
            class="lg:hidden relative w-12 h-12 rounded-lg bg-white/5 hover:bg-white/10 transition-colors z-[1002]"
            id="menuToggle"
            aria-label="Toggle menu"
            type="button"
        >
            <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-6 h-5 flex flex-col justify-between">
                    <span id="bar1" class="block w-full h-[2px] bg-white rounded-full transition-all duration-300"></span>
                    <span id="bar2" class="block w-full h-[2px] bg-white rounded-full transition-all duration-300"></span>
                    <span id="bar3" class="block w-full h-[2px] bg-white rounded-full transition-all duration-300"></span>
                </div>
            </div>
        </button>
    </div>

    <!-- Mobile Menu Overlay -->
    <div
        id="mobileMenu"
        class="fixed inset-0 bg-black/95 backdrop-blur-xl z-[1001] opacity-0 invisible transition-all duration-300 lg:hidden"
    >
        <div class="h-full flex flex-col items-center justify-center px-6 py-20">
            <nav class="w-full max-w-sm">
                <ul class="flex flex-col items-center space-y-6">
                    <li class="w-full text-center">
                        <a
                            href="#about"
                            class="mobile-link block text-2xl sm:text-3xl font-bold text-white/60 hover:text-white transition-colors duration-300 py-3"
                        >
                            About
                        </a>
                    </li>
                    <li class="w-full text-center">
                        <a
                            href="#services"
                            class="mobile-link block text-2xl sm:text-3xl font-bold text-white/60 hover:text-white transition-colors duration-300 py-3"
                        >
                            Services
                        </a>
                    </li>
                    <li class="w-full text-center">
                        <a
                            href="#gallery"
                            class="mobile-link block text-2xl sm:text-3xl font-bold text-white/60 hover:text-white transition-colors duration-300 py-3"
                        >
                            Gallery
                        </a>
                    </li>
                    <li class="w-full text-center">
                        <a
                            href="#faq"
                            class="mobile-link block text-2xl sm:text-3xl font-bold text-white/60 hover:text-white transition-colors duration-300 py-3"
                        >
                            FAQ
                        </a>
                    </li>
                    <li class="w-full text-center">
                        <a
                            href="#contact"
                            class="mobile-link block text-2xl sm:text-3xl font-bold text-white/60 hover:text-white transition-colors duration-300 py-3"
                        >
                            Contact
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Contact Info -->
            <div class="mt-12 text-center">
                <a
                    href="tel:+919217270700"
                    class="inline-flex items-center gap-2 text-orange-400 font-semibold text-lg hover:text-orange-300 transition-colors"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                    +91 9217270700
                </a>
            </div>
        </div>
    </div>
</header>

<script>
    // Header scroll behavior
    let lastScrollY = window.scrollY;
    const header = document.getElementById("header") as HTMLElement;
    let ticking = false;

    function updateHeader() {
        const currentScrollY = window.scrollY;

        if (currentScrollY > lastScrollY && currentScrollY > 100) {
            header.style.transform = "translateY(-100%)";
        } else {
            header.style.transform = "translateY(0)";
        }

        if (currentScrollY > 50) {
            header.classList.add(
                "bg-[rgba(10,10,15,0.9)]",
                "backdrop-blur-[20px]",
                "border-b",
                "border-white/[0.08]",
                "py-4",
            );
            header.classList.remove("py-5", "bg-transparent");
        } else {
            header.classList.remove(
                "bg-[rgba(10,10,15,0.9)]",
                "backdrop-blur-[20px]",
                "border-b",
                "border-white/[0.08]",
                "py-4",
            );
            header.classList.add("py-5", "bg-transparent");
        }

        lastScrollY = currentScrollY;
        ticking = false;
    }

    window.addEventListener("scroll", () => {
        if (!ticking) {
            window.requestAnimationFrame(updateHeader);
            ticking = true;
        }
    });

    // ===== HAMBURGER MENU - BUILT FROM SCRATCH =====
    
    const menuToggle = document.getElementById('menuToggle');
    const mobileMenu = document.getElementById('mobileMenu');
    const mobileLinks = document.querySelectorAll('.mobile-link');
    const bar1 = document.getElementById('bar1');
    const bar2 = document.getElementById('bar2');
    const bar3 = document.getElementById('bar3');
    
    let isMenuOpen = false;
    
    // Toggle menu function
    function toggleMenu() {
        isMenuOpen = !isMenuOpen;
        
        if (isMenuOpen) {
            // Open menu
            mobileMenu?.classList.remove('opacity-0', 'invisible');
            mobileMenu?.classList.add('opacity-100', 'visible');
            document.body.style.overflow = 'hidden';
            
            // Transform hamburger to X
            if (bar1 && bar2 && bar3) {
                bar1.style.transform = 'rotate(45deg) translateY(9px)';
                bar2.style.opacity = '0';
                bar3.style.transform = 'rotate(-45deg) translateY(-9px)';
            }
        } else {
            // Close menu
            mobileMenu?.classList.remove('opacity-100', 'visible');
            mobileMenu?.classList.add('opacity-0', 'invisible');
            document.body.style.overflow = '';
            
            // Reset hamburger
            if (bar1 && bar2 && bar3) {
                bar1.style.transform = '';
                bar2.style.opacity = '';
                bar3.style.transform = '';
            }
        }
    }
    
    // Click on hamburger button
    menuToggle?.addEventListener('click', toggleMenu);
    
    // Click on menu links
    mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
            toggleMenu();
        });
    });
    
    // Click outside menu to close (on overlay)
    mobileMenu?.addEventListener('click', (e) => {
        if (e.target === mobileMenu) {
            toggleMenu();
        }
    });
    
    // Press Escape key to close
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && isMenuOpen) {
            toggleMenu();
        }
    });
</script>
